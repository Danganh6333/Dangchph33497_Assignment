<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Content.AddUserActivity">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Thêm Người Dùng"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/tvMaNguoiDung"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Mã Người Dùng"
        android:padding="7dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tvTenNguoiDung"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/edMaNguoiDung"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="number"
        android:layout_alignEnd="@id/edMaNguoiDung"
        android:layout_below="@id/edTenNguoiDung"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvTenNguoiDung"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Tên Người Dùng"
        android:padding="7dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tvTitle"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/edTenNguoiDung"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignEnd="@id/tvTenNguoiDung"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tvMaNguoiDung"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />
    <Button
        android:id="@+id/btnThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Thêm"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Spinner"/>
    <Button
        android:id="@+id/btnBoQua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bỏ Qua"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnThem"/>
</RelativeLayout>